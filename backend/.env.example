# Ruta: C:\Projects\GRC-Claude\grc-system\backend\.env.example
# Copiar este archivo como .env y llenar con valores reales

# Puerto del servidor
PORT=3000

# Ambiente (development, production, test)
NODE_ENV=development

# Base de datos PostgreSQL
DATABASE_URL="postgresql://postgres:tu_password@localhost:5432/grc_system?schema=public"

# JWT Secrets (cambiar en producción)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Configuración de Cors (opcional)
CORS_ORIGIN=http://localhost:5173

# Configuración de Email (opcional, para futuro)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=tu-email@gmail.com
# EMAIL_PASS=tu-password
# EMAIL_FROM=noreply@tuapp.com

# Configuración de AWS S3 (opcional, para archivos)
# AWS_ACCESS_KEY_ID=tu-access-key
# AWS_SECRET_ACCESS_KEY=tu-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=tu-bucket-name

# Configuración de Redis (opcional, para caché)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Configuración de Logs
LOG_LEVEL=debug

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100